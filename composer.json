{
  "name": "sparkly/sparkly",
  "autoload": {
    "psr-4": {
      "Sparkly\\": "src/apps",
      "Sparkly\\Modules\\": "src/modules",
      "Sparkly\\System\\": "src/system"
    }
  },
  "require": {
    "vlucas/phpdotenv": "^5.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "*"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "scripts": {
    "phpcs": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcs --standard=PSR12 --report=summary,source ./src/",
    "format": "@php ./vendor/squizlabs/php_codesniffer/bin/phpcbf --report=summary,source ./src/"
  },
  "minimum-stability": "dev"
}
