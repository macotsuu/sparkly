{
  "name": "bfst/bfst",
  "autoload": {
    "psr-4": {
      "BFST\\": "app/",
      "BFST\\Order\\": "app/Order/src",
      "BFST\\Base\\": "app/Base/src",
      "Volcano\\Cache\\": "system/Cache/src",
      "Volcano\\Container\\": "system/Container/src",
      "Volcano\\Foundation\\": "system/Foundation/src/",
      "Volcano\\Http\\": "system/Http/src",
      "Volcano\\ORM\\": "system/ORM/src",
      "Volcano\\Routing\\": "system/Routing/src"
    },
    "files": [
      "system/helpers.php"
    ]
  },
  "require": {
    "ext-redis": "*",
    "ext-pdo": "*",
    "vlucas/phpdotenv": "^5.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5"
  },
  "scripts": {
    "test": [
      "@phpunit",
      "@phpcs",
      "@phpstan"
    ],
    "phpunit": "phpunit",
    "phpcbf": "tools/php_codesniffer/vendor/bin/phpcbf --standard=PSR12 app",
    "phpcs": "tools/php_codesniffer/vendor/bin/phpcs --standard=PSR12 app",
    "phpstan": "tools/phpstan/vendor/bin/phpstan --memory-limit=-1"
  },
  "config": {
    "preferred-install": "stable",
    "sort-packages": true,
    "optimize-autoloader": true
  },
  "minimum-stability": "dev"
}
