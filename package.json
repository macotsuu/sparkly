{
    "dev-dependencies": {
        "nodemon": "^2.0.20"
    },
    "scripts": {
        "start": "nodemon public/web.php"
    },
    "nodemonConfig": {
        "verbose": true,
        "ignore": [
            ".git",
            ".idea",
            ".vscode",
            "node_modules",
            "var",
            "devops"
        ],
        "execMap": {
            "php": "php"
        },
        "restartable": "r",
        "ext": "php"
    }
}
